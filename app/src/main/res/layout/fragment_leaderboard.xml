<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.main.LeaderboardFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_8dp"
            android:orientation="vertical">

        <TextView
                android:id="@+id/calendarShortcut"
                android:padding="@dimen/padding_8dp"
                android:text="@string/calendario"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_touch_48dp"
                android:textSize="@dimen/text_size_20"
                android:drawableEnd="@drawable/ic_calendar"
                android:background="@drawable/rounded_corners"
                android:clickable="true"
                android:focusable="true"/>

        <LinearLayout
                android:id="@+id/calendarioContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="vertical"/>
        
        <LinearLayout
                android:id="@+id/leaderboard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/padding_8dp">

            <TextView
                    android:text="@string/title_leaderboard"
                    android:padding="@dimen/padding_8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:background="@color/deepBlue"/>
        </LinearLayout>

        <Button
                android:id="@+id/updateLeaderboardButton"
                android:text="@string/update_leaderboard"
                android:layout_width="match_parent"
                android:layout_height="@dimen/min_touch_48dp"
                android:visibility="gone"
                android:enabled="false"
                />
    </LinearLayout>
</ScrollView>
