<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.HomeFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="2dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

            <Button
                    android:id="@+id/changeLegaButton"
                    android:text="@string/change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"/>

            <TextView
                    android:id="@+id/legaName"
                    android:text="@string/lega"
                    android:textSize="25sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>
        </LinearLayout>

        <LinearLayout
                android:id="@+id/nextGameLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/pannaOrange"
                android:gravity="center">

            <TextView
                    android:id="@+id/nextGameTitle"
                    android:text="@string/next_game"
                    android:textSize="@dimen/base_text_size_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="top"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_weight="1">

                    <ImageView
                            android:id="@+id/logoHome"
                            android:src="@drawable/logo_fanta"
                            android:layout_width="@dimen/logo_dimension"
                            android:layout_height="@dimen/logo_dimension"
                            android:contentDescription="@string/team_logo"/>

                    <TextView
                            android:id="@+id/teamHome"
                            android:text="@string/hometeam"
                            android:textSize="@dimen/base_text_size_20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"/>
                </LinearLayout>


                <TextView
                        android:id="@+id/versusText"
                        android:text="@string/versus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textAlignment="center"
                        android:padding="10dp"
                        android:textSize="20sp"
                        android:layout_weight="1"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_weight="1">

                    <ImageView
                            android:id="@+id/logoAway"
                            android:src="@drawable/logo_fanta"
                            android:layout_width="@dimen/logo_dimension"
                            android:layout_height="@dimen/logo_dimension"
                            android:contentDescription="@string/team_logo"/>

                    <TextView
                            android:id="@+id/teamAway"
                            android:text="@string/awayteam"
                            android:textSize="@dimen/base_text_size_20"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <Button
                android:id="@+id/calcoloGiornataButton"
                android:enabled="false"
                android:visibility="gone"
                android:text="@string/calcolo_giornata"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:id="@+id/myTeamLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/min_touch_48dp"
                android:gravity="center">

            <TextView
                    android:id="@+id/posizioneInClassifica"
                    android:text="@string/primo_posto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"/>

            <ImageView
                    android:src="@drawable/logo_fanta"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/teamLogo"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="@string/team_logo"/>

            <TextView
                    android:id="@+id/teamName"
                    android:text="@string/team_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"/>

            <TextView
                    android:id="@+id/totalePunti"
                    android:text="@string/zero_punti"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:textSize="20sp"/>

        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/optionsOfLeague"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/min_touch_48dp">

            <TextView
                    android:id="@+id/legaNameOption"
                    android:textSize="@dimen/base_text_size_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                    android:id="@+id/legaStartOption"
                    android:textSize="@dimen/base_text_size_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                    android:id="@+id/startLeagueButton"
                    android:text="@string/start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/legaStartOption"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:visibility="gone"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</ScrollView>