<PreferenceScreen
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
            app:title="@string/display">

        <ListPreference
                app:key="theme"
                app:title="Theme"
                app:entries="@array/theme_entries"
                app:entryValues="@array/theme_values"
                app:defaultValue="light"
                app:useSimpleSummaryProvider="true"/>

    </PreferenceCategory>
</PreferenceScreen>