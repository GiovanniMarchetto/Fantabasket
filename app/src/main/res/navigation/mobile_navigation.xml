<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@+id/navigation_home">

    <fragment
            android:id="@+id/navigation_home"
            android:name="it.units.fantabasket.ui.main.HomeFragment"
            android:label="@string/title_home"
            tools:layout="@layout/fragment_home">
    </fragment>

    <fragment
            android:id="@+id/navigation_dashboard"
            android:name="it.units.fantabasket.ui.main.DashboardFragment"
            android:label="@string/title_dashboard"
            tools:layout="@layout/fragment_dashboard">
        <action
                android:id="@+id/action_DashboardFragment_to_RosterManagerFragment"
                app:destination="@id/navigation_roster_manager"/>
    </fragment>

    <fragment
            android:id="@+id/navigation_roster_manager"
            android:name="it.units.fantabasket.ui.RosterManagerFragment"
            android:label="@string/title_roster_manager"
            tools:layout="@layout/fragment_roster_manager">
        <action
                android:id="@+id/action_RosterManagerFragment_to_DashboardFragment"
                app:destination="@id/navigation_dashboard"/>
    </fragment>

    <fragment
            android:id="@+id/navigation_notifications"
            android:name="it.units.fantabasket.ui.main.NotificationsFragment"
            android:label="@string/title_notifications"
            tools:layout="@layout/fragment_notifications">
    </fragment>

    <fragment
            android:id="@+id/navigation_leaderboard"
            android:name="it.units.fantabasket.ui.main.LeaderboardFragment"
            android:label="@string/title_leaderboard"
            tools:layout="@layout/fragment_leaderboard"/>
</navigation>